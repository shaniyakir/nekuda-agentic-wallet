# --- Session (iron-session) ---
# Random 32+ char string for encrypting session cookies
SESSION_SECRET=replace-me-with-a-random-32-char-string

# --- Nekuda SDK ---
# Backend (server-side only — used by @nekuda/nekuda-js)
NEKUDA_API_KEY=sk_...

# Frontend (exposed to browser — used by @nekuda/wallet)
NEXT_PUBLIC_NEKUDA_PUBLIC_KEY=pk_...

# Optional: override Nekuda base URL (e.g. sandbox)
# NEKUDA_BASE_URL=https://sandbox.nekuda.ai

# --- OpenAI ---
OPENAI_API_KEY=sk-proj-...

# --- Langfuse (Observability) ---
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_BASEURL=https://cloud.langfuse.com

# --- Stripe (Test Mode) ---
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# --- Resend (Magic Link Email) ---
RESEND_API_KEY=re_...

# Set to "true" for demo deployments (shows magic link in UI, no email needed)
NEXT_PUBLIC_DEMO_MODE=false

# Optional: override base URL for magic links (auto-detected from request)
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# --- Vercel KV / Upstash Redis ---
# Required for session, cart, and rate-limit persistence
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here
